@page
@model Pab.WebAdmin.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Dodaj produkt";
}

<h2>Dodaj nowy produkt</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="NewProduct.Name" class="form-label">Nazwa:</label>
        <input asp-for="NewProduct.Name" class="form-control" />
        <span asp-validation-for="NewProduct.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NewProduct.Price" class="form-label">Cena:</label>
        <input asp-for="NewProduct.Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="NewProduct.Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NewProduct.Stock" class="form-label">Stan magazynowy:</label>
        <input asp-for="NewProduct.Stock" class="form-control" type="number" />
        <span asp-validation-for="NewProduct.Stock" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Zapisz</button>
    <a asp-page="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
