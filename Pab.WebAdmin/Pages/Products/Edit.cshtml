@page "{id:int}"
@model Pab.WebAdmin.Pages.Products.EditModel
@{
    ViewData["Title"] = "Edytuj produkt";
}

<h2>Edytuj produkt</h2>
<hr />

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success">@Model.StatusMessage</div>
}

<form method="post">
    <input type="hidden" asp-for="Product.Id" />

    <div class="mb-3">
        <label asp-for="Product.Name" class="form-label">Nazwa:</label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Price" class="form-label">Cena:</label>
        <input asp-for="Product.Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Stock" class="form-label">Ilość w magazynie:</label>
        <input asp-for="Product.Stock" class="form-control" type="number" />
        <span asp-validation-for="Product.Stock" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    <a asp-page="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
