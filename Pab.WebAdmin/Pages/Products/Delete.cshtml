@page "{id:int}"
@model Pab.WebAdmin.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Usuń produkt";
}

<h2>Usuń produkt</h2>
<hr />

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success">@Model.StatusMessage</div>
}

<div class="alert alert-warning">
    <p>Na pewno chcesz usunąć produkt:</p>
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Product.Id</dd>

        <dt class="col-sm-2">Nazwa:</dt>
        <dd class="col-sm-10">@Model.Product.Name</dd>

        <dt class="col-sm-2">Cena:</dt>
        <dd class="col-sm-10">@Model.Product.Price.ToString("C")</dd>

        <dt class="col-sm-2">Ilość:</dt>
        <dd class="col-sm-10">@Model.Product.Stock</dd>
    </dl>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-page="Index" class="btn btn-secondary">Anuluj</a>
</form>
