@page
@model Pab.WebAdmin.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<h2>Logowanie</h2>
<hr />

@if (!string.IsNullOrEmpty(Model.Input.ErrorMessage))
{
    <div class="alert alert-danger">@Model.Input.ErrorMessage</div>
}

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">E-mail:</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label">Hasło:</label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zaloguj</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
